.main {
  padding: 10rpx;
  color: #666;
}

/* 选项卡 */
.topTabSwiper {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.tab {
  display: inline-block;
  margin: 5rpx;
  padding: 15rpx;
  
}

.tab.active {
  border-bottom: 5rpx solid #de688b;
  color: #de688b;
}

.dan {
  border: 1px solid #666;
  border-radius: 20rpx;
  text-align: center;
  padding-top: 5rpx;
}

/* 视频 */
.video_info {

}

.video_info video {
  width: 100%;
}

.video_title_wrap {
  display: flex;
  justify-content: space-between;
  font-size: 35rpx;
  color:#000;
}

.video_param {
  margin-top: 5rpx;
  font-size: 28rpx;
}
.video_param text {
  margin-left: 15rpx;
}

.video_param .author{
  color:#000;
}

/* 推荐视频 */
.other_list {
  margin-top: 10rpx;
}

.other_item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.other_img_wrap {
  width: 38%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.other_img_wrap image {
  width: 90%;
  border-radius: 15rpx;
}

.other_info {
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.other_title {
  font-size: 30rpx;
  color: #e06f93;
}

.other_param {
  font-size: 26rpx;
  color:#666;
}

/* 评论列表 */
.comment_wrap {
  margin-top: 10rpx;
}

.comment_title {
  padding: 10rpx;
  font-size: 20rpx;
}

.comment_list {}

.comment_item {
  margin-bottom: 10rpx;
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #666;
}

.comment_user {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.comment_user image {
  width: 60%;
  border-radius: 15rpx;
}

.comment_info {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.comment_detail {
  display: flex;
  justify-content: space-between;
}
.comment_detail .author {
  font-size: 28rpx;
  color:#000;
}
.comment_detail .date {
  color: #666;
  font-style: 24rpx;
}

.comment_content {
  font-style: 28rpx;
  color: #000;
}